<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/savedValueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_saved_values_label"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_middle"
        app:layout_constraintBottom_toTopOf="@id/currentValueText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/savedValueText"
        style="@style/SavedValues"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="top"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@id/currentValueText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savedValueLabel" />

    <TextView
        android:id="@+id/currentValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_main_current_value_label"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

    <TextView
        android:id="@+id/currentValueResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_big"
        android:gravity="end"
        android:paddingEnd="@dimen/padding_middle"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_middle"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentValueText"
        app:layout_constraintWidth_percent="0.54" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        style="@style/ActivityMainButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_middle"
        android:padding="@dimen/padding_big"
        android:text="@string/activity_main_save_button_label"
        app:layout_constraintBottom_toTopOf="@id/calculatorButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/currentValueResult"
        app:layout_constraintTop_toBottomOf="@id/currentValueText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculatorButton"
        style="@style/ActivityMainButtonsLandscape"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_middle"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/activity_main_calculator_button_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveButton" />
</androidx.constraintlayout.widget.ConstraintLayout>